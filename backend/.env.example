# Server Configuration
NODE_ENV=development
PORT=5000
API_BASE_URL=http://localhost:5000

# Database Configuration (Prefer Supabase)
# If using Supabase, set SUPABASE_DATABASE_URL instead of individual DB_* variables.
SUPABASE_DATABASE_URL=
DB_HOST=localhost
DB_PORT=5432
DB_NAME=food_delivery_db
DB_USER=postgres
DB_PASSWORD=your_password
DB_SSL=require
# Set to 0 to allow self-signed certificates (use with caution)
DB_SSL_REJECT_UNAUTHORIZED=1

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRES_IN=30d

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN_CUSTOMER=your_customer_bot_token
TELEGRAM_BOT_TOKEN_DELIVERY=your_delivery_bot_token
TELEGRAM_WEBHOOK_DOMAIN=https://yourdomain.com

# Payment Gateway (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Restaurant Configuration
RESTAURANT_NAME=Delicious Bites
RESTAURANT_PHONE=+998901234567
RESTAURANT_ADDRESS=123 Main Street, Tashkent
DELIVERY_FEE=5000
MIN_ORDER_AMOUNT=15000

# Admin Configuration
ADMIN_EMAIL=admin@restaurant.com
ADMIN_PASSWORD=Admin@123456

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Supabase (optional)
# If using Supabase for storage, set these values. SUPABASE_DATABASE_URL will be used for DB.
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_STORAGE_BUCKET=uploads
SUPABASE_PUBLIC_URL=